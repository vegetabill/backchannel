{
  "name": "backchannel-server",
  "version": "1.0.3",
  "description": "anonymous epheremal chat for memeing zoom meetings etc",
  "main": "index.js",
  "scripts": {
    "dev:start": "node -r ts-node/register index.ts",
    "dev": "VERBOSE=true CHANNEL_LIFETIME_SEC=60 EXPIRATION_WARNING_TIME_SEC=30 nodemon --scripts-prepend-node-path",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker": "npm run build && docker build ."
  },
  "author": "@vegetabill",
  "license": "MIT",
  "dependencies": {
    "backchannel-common": "^1.0.3",
    "bufferutil": "^4.0.1",
    "chalk": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "shortid": "^2.2.15",
    "utf-8-validate": "^5.0.2",
    "winston": "^3.2.1",
    "ws": "^7.2.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.5",
    "@types/ws": "^7.2.4",
    "nodemon": "^2.0.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "yarn": "1.x",
    "node": "13.x"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "lib",
      "index.ts"
    ],
    "exec": "npm run dev:start",
    "ext": "ts"
  }
}
